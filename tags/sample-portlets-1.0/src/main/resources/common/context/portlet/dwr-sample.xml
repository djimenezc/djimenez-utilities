<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
       http://www.directwebremoting.org/schema/spring-dwr http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

    <bean id="echoDwr" class="com.germinus.sample.ajax.EchoDwr">
        <dwr:remote javascript="EchoDwr"/>
    </bean>
    
    <bean id="people" class="com.germinus.sample.model.People">
        <dwr:remote javascript="People"/>
    </bean>
	
	<dwr:configuration  >
		<dwr:convert type="bean" class="com.germinus.sample.model.Person"></dwr:convert>
	</dwr:configuration>
	
	<dwr:controller id="dwrController" debug="true"/>
	
</beans>