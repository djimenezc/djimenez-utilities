<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
	default-lazy-init="true">

	<bean id="factoryMock"
		class="com.djimenez.example.spring.mvc.service.test.mock.FactoryMock"></bean>
		
<!--	<bean id="transactionManager" -->
<!--    class="org.springframework.transaction.jta.JtaTransactionManager"/>-->

	<bean id="transactionManager" factory-bean="factoryMock"
		factory-method="getTransactionManager"></bean>

	<!-- Add new DAOs here -->
	<bean id="lookupDao" factory-bean="factoryMock" factory-method="getLookupDao">
	</bean>

	<bean id="roleDao" factory-bean="factoryMock" factory-method="getRoleDao">
	</bean>

	<bean id="userDao" factory-bean="factoryMock" factory-method="getUserDao">
	</bean>
</beans>